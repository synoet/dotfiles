[module/cpu]
type = internal/cpu
interval = 2

format-prefix            = 
format-padding    = 3
format-prefix-foreground = ${colors.red}
label                    = %percentage:2%%
label-foreground = ${colors.foreground}
format-background = ${colors.bg-alt}
format-prefix-padding = 1
label-padding = 1


[module/uptime]
type = custom/script
exec = uptime | awk -F, '{sub(".*up ",x,$1);print $1}'
interval = 100
label = %output%
format-background = ${colors.bg-alt}
format-prefix-padding = 1
label-padding = 1
format-prefix = "ﰇ"
format-prefix-foreground = ${colors.blue}

[module/date]
type = internal/date
interval = 1

format                = <label>
format-foreground     = ${colors.foreground}
format-background     = ${colors.bg-alt}
format-prefix         = 
format-prefix-foreground = ${colors.magenta}
format-prefix-padding = 1
label                 = %time%
label-foreground = ${colors.foreground}
label-padding         = 1
time                  = %b %d, %H:%M
time-alt              = %A, %d %B %Y


[module/memory]
type = internal/memory
interval = 2

format-prefix            = 
format-padding = 0
format-prefix-foreground = ${colors.orange}
format-background = ${colors.bg-alt}
format-prefix-padding = 1
label                    = %mb_used%
label-foreground = ${colors.foreground}
label-padding            = 1
