[module/eth]
type = internal/network
interface =  enp37s0
interval = 1.0
accumulate-stats = true
unknown-as-up = true

format-connected-foreground        = ${colors.foreground}
format-connected-background        = ${colors.bg-alt}
format-connected-prefix            = 
format-connected-prefix-foreground = ${colors.green}
format-connected-prefix-padding    = 1
label-connected                    = %local_ip%
label-connected-foreground = ${colors.foreground}
label-connected-padding            = 1

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#78a9ff}%mountpoint%%{F-} %percentage_used%%
format-background = ${colors.bg-alt}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.disabled}

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false


format-volume            = <ramp-volume><label-volume>
format-volume-foreground = ${colors.foreground}
format-volume-background = ${colors.bg-alt}
label-volume             = %percentage%%
label-volume-foreground = ${colors.foreground}
label-volume-padding     = 1

format-muted-foreground     = ${colors.alert}
format-muted-background     = ${self.format-volume-background}
format-muted-prefix         = ﱝ
format-muted-prefix-padding = 1
label-muted-foreground = ${colors.foreground}
label-muted                 = Muted
label-muted-padding         = ${self.label-volume-padding}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 墳
ramp-volume-3 = 
ramp-volume-4 = 
ramp-volume-padding = 1
ramp-volume-foreground = ${colors.cyan}

ramp-headphones-0 = 
ramp-headphones-1 = 

click-right = pavucontrol&

